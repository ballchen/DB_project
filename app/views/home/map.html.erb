<style>
	#user-photo{
	text-align: center;
	}
	#user-photo img{
		border-radius: 200px;
		border: 5px white solid;
		padding: 3px;
		margin-top: 30px;
		width: 100px;
	}
	h1{
		text-align: center;
	}
	.map{
		text-align: center;
	}
	.back .button{
		color: white;
	}
	.back{
		position: fixed;
		margin: 20px;
	}
	.loading{
    	text-align: center;
  	}
</style>

<div class="back"><a class="button" href="/"><i class="icon-chevron-left icon-white"></i>Back to home</a></div>
<% if current_user %>
  <div id="user-photo">
      <img src="<%= current_user.pic %>">
  </div>
<% end %>
<h1 ng-if='!all' ng-cloak>我的打卡紀錄</h1>
<h1 ng-if='all' ng-cloak>所有人的打卡紀錄</h1>
  <div class="loading"><img src="/images/loading-bars.svg" width="80" height="80" ng-hide='done'/></div>
<span>在國外的打卡數：<span ng-bind='abroad.length'></span></span>
</br>
<div class="map">
  <div id="map" style='height: 500px; width:100%;'></div>
</div>
