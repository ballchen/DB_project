<body>
    <%if current_user  %>
        <div class="home" id="home">
	    	<div id="user-photo">
    			<img src="<%= current_user.pic %>">
    		</div>
    		<div id="user-name">
    			<h1><%= current_user.name %></h1>
    		</div>
    		<div id="user-about">
    			<% if current_user.schools %><i class="icon-briefcase"></i><p>就讀<%= current_user.education %></p><% end %>
    			<% if current_user.location %><i class="icon-map-marker"></i><p>現居<%= current_user.location  %></p><% end %>
    			<% if current_user.hometown %><i class="icon-home"></i><p>來自<%= current_user.hometown  %></p><% end %>
            </div>
	    	<div class="menu">
	    		<a href="place"><div id="nav1"><img src="/images/map.png"><p>打卡紀錄</p></div></a>
	    		<a href="event"><div id="nav2"><img src="/images/event.png"><p>活動紀錄</p></div></a>
	    		<a href="chart"><div id="nav3"><img src="/images/page.png"><p>粉絲專頁</p></div></a>
	    	</div>
            <a href="/logout">LOGOUT</a>
        </div>
    <% else %>
        <a href="/access_token">ACCESS TOKEN</a>
    <% end %>
</body>
